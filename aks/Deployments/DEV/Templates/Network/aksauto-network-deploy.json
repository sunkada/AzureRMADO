{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "aksVNetName": {
        "type": "string"
      },
      "aksVNetPrefix": {
        "type": "string"
      },      
      "aksSubnetName": {
        "type": "string"
      },
      "aksSubnetPrefix": {
        "type": "string"     
      },      
      "appgwSubnetName": {
        "type": "string"
      },
      "appgwSubnetPrefix": {
        "type": "string"
      },
      "vrnSubnetName": {
        "type": "string"
      },
      "vrnSubnetPrefix": {
        "type": "string"
      },
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]"
      }
    },
    "variables": {},
    "resources": [
      {
        "apiVersion": "2018-10-01",
        "type": "Microsoft.Network/virtualNetworks",
        "name": "[parameters('aksVNetName')]",
        "location": "[parameters('location')]",
        "properties": {
          "addressSpace": {
            "addressPrefixes": [
              "[parameters('aksVNetPrefix')]"
            ]
          }
        },
        "resources": [
          {
            "apiVersion": "2018-10-01",
            "type": "subnets",
            "location": "[parameters('location')]",
            "name": "[parameters('aksSubnetName')]",
            "dependsOn": [
              "[parameters('aksVNetName')]"
            ],
            "properties": {
              "addressPrefix": "[parameters('aksSubnetPrefix')]"
            }
          },          
          {
            "apiVersion": "2018-10-01",
            "type": "subnets",
            "location": "[parameters('location')]",
            "name": "[parameters('appgwSubnetName')]",
            "dependsOn": [
              "[parameters('aksVNetName')]",
              "[parameters('aksSubnetName')]"
            ],
            "properties": {
              "addressPrefix": "[parameters('appgwSubnetPrefix')]"
            }
          },
          {
            "apiVersion": "2018-10-01",
            "type": "subnets",
            "location": "[parameters('location')]",
            "name": "[parameters('vrnSubnetName')]",
            "dependsOn": [
              "[parameters('aksVNetName')]",
              "[parameters('aksSubnetName')]",
              "[parameters('appgwSubnetName')]"
            ],
            "properties": {
              "addressPrefix": "[parameters('vrnSubnetPrefix')]"
            }
          }
        ]
      }
    ]
  }
  